<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sliding="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="modelData" type="com.example.dbman.ui.ScanStoreDetail.beans.ScanStoreDetailSaveModel"/>
    </data>

<LinearLayout
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <ListView
        android:id="@+id/summaryTable"
        android:layout_width="200dp"
        android:layout_height="match_parent"

        />
    <LinearLayout
        android:layout_gravity="left"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scan_store_detail_save_scanreason"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scan_store_detail_save_in_reason"
                />
            <Spinner
                android:id="@+id/out_reason_selector"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scan_store_detail_save_out_reason"
                />

            <Spinner
                android:id="@+id/in_reason_selector"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scan_store_detail_storetime"
                />
            <Spinner
                android:id="@+id/personSelector"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <info.hoang8f.widget.FButton
                android:id="@+id/btnSave"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/scan_store_detail_save"
                />
            <info.hoang8f.widget.FButton
                android:id="@+id/btnCancel"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scan_store_detail_quit"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>


</layout>