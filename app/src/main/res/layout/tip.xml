<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TipMain"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/filled_box"
    android:contentDescription="@string/imgNote"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/upContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/description"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="1.this is the test text!\n1.this is the test text!\n1.this is the test text!\n1.this is the test text!\n"
            android:textColor="#FFFFFF" />


        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical|center_horizontal"
            android:background="@mipmap/img_close"
            android:contentDescription="@string/imgNote" />

    </LinearLayout>

</LinearLayout>
